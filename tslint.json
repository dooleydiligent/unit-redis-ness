{
  "extends": "tslint:recommended",
  "rules": {
    "no-empty": [true, "allow-empty-functions"],
    "trailing-comma": [
      false,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "quotemark": [true, "single", "avoid-escape"]
  }
}
